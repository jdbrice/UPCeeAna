<?xml version="1.0" encoding="UTF-8"?>
<config>

	<Data name="d" url="Run10AuAu.root" />

	<TCanvas width="1900" height="1600" />
	<Margins>0.05, 0.15, 0.13, 0.13</Margins>

	<Plot>
		<StatBox v="0" />
		<Histo name="chipid" draw="colz" y-range="0, 160" x-title="#chi_{#pi#pi} = n#sigma_{pi1}^{2} + n#sigma_{pi2}^{2}" y-title="#chi_{ee} = n#sigma_{e1}^{2} + n#sigma_{e2}^{2}" logz="1" yto="1.2" />

		<TLatex ux="40" uy="140" text="All Tracks" font="42" />
		<Export url="pid_before_TOF.png" />
	</Plot>

	<Plot>
		<Histo name="chipidcut" draw="colz" y-range="0, 160" x-title="#chi_{#pi#pi} = n#sigma_{pi1}^{2} + n#sigma_{pi2}^{2}" y-title="#chi_{ee} = n#sigma_{e1}^{2} + n#sigma_{e2}^{2}" logz="1" yto="1.2" />

		<TLatex ux="40" uy="140" text="After #Delta#DeltaTOF Cut" font="42" />

		<Export url="pid_after_TOF.png" />
	</Plot>


	<Plot>
		<Histo name="chipidcut" draw="colz" x-range="0, 120" y-range="0, 60" x-title="#chi_{#pi#pi} = n#sigma_{pi1}^{2} + n#sigma_{pi2}^{2}" y-title="#chi_{ee} = n#sigma_{e1}^{2} + n#sigma_{e2}^{2}" logz="1" yto="1.2" />

		<TLatex ux="40" uy="140" text="After #Delta#DeltaTOF Cut" font="42" />
		<TLine p1="0, 5" p2="120, 5" width="4" color="#F00" style="1" />

		<Export url="pid_after_TOF_selected.png" />
	</Plot>



	<Transform>
		<Rebin save_as="dedxrb" name="dedx" bins_x="pbins" bins_y="dedxbins" />
		<Rebin save_as="dedxcutrb" name="dedxcut" bins_x="pbins" bins_y="dedxbins" />

		<Rebin save_as="deltaTofrb" name="deltaTof" bins_x="dtofbins" />
		<Rebin save_as="deltaToferb" name="deltaTofe" bins_x="dtofbins" />
		<Rebin save_as="ddeltaTofrb" name="ddeltaTof" bins_x="ddtofbins" />
	</Transform>

	<Plot>
		<Histo name="dedxrb" draw="colz" logz="1" x-title="q*p (GeV/c)" y-title="n#sigma_{e}" z-range="1, 3e3"/>

		<TLatex ux="-1.75" uy="6" text="All Tracks" font="42" />
		<Export url="dedx_before_TOF.png" />
	</Plot>

	<Plot>
		<Histo name="dedxcutrb" draw="colz" logz="1" x-title="q*p (GeV/c)" y-title="n#sigma_{e}" z-range="1, 3e3"/>

		<TLatex ux="-1.75" uy="6" text="After #Delta#DeltaTOF Cut" font="42" />
		<Export url="dedx_after_TOF.png" />
	</Plot>

	<Plot>
		<Histo name="deltaTofrb" draw="lpe" lc="#000" logy="1" title="" x-title="#Delta TOF = t_{1} - t_{2} (ns)" y-title="dN/d#Delta TOF (ns)^{-1}"/>
		<Histo name="deltaToferb" draw="same lpe" lc="#F00" marker-color="#F00"  />

		<Legend border-size="0" fill-style="0" >
			<Position pos="top left" padding="0.01, 0, 0, 0.03" w="0.3"/>
			<Entry name="deltaToferb" title="Electron assumption" opt="lpe" />
			<Entry name="deltaTofrb" title="Data" opt="lpe" />
			
		</Legend>
		<Export url="deltaTof.pdf" />
	</Plot>

	<Plot>
		<Histo name="ddeltaTofrb" draw="hpe" lc="#000" logy="1" title="" x-title="#Delta#Delta TOF = #Delta TOF^{measured} - #Delta TOF^{electron} (ns)" y-title="dN/d#Delta#Delta TOF (ns)^{-1}" xr="-30, 30"/>
		<Export url="deltadeltaTof.pdf" />
	</Plot>

	<Plot>
		<Histo name="ddeltaTof" draw="hpe" lc="#000" logy="1" title="" x-title="#Delta#Delta TOF = #Delta TOF^{measured} - #Delta TOF^{electron} (ns)" y-title="dN/d#Delta#Delta TOF (ns)^{-1}" xr="-7, 7"/>
		<Export url="deltadeltaTof_zoom.pdf" />
	</Plot>


	<pbins width="0.01" min="-2" max="2" />
	<dedxbins width="0.1" min="-10" max="8" />
	<dtofbins width="0.02" min="-15" max="15" />
	<ddtofbins width="0.05" min="-30" max="30" />

</config>