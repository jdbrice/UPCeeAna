<?xml version="1.0" encoding="utf-8" ?>
<config>

	<Data name="d" url="Run10AuAu.root" />


	<Transform>
		<Rebin save_as="rb_chipid" name="chipid" bins_x="bins.X2pipi" bins_y="bins.X2ee" /> 
		<Rebin save_as="rb_chipidSel" name="chipidSel" bins_x="bins.X2pipi" bins_y="bins.X2ee" /> 
		<Rebin save_as="rb_chipidcut" name="chipidcut" bins_x="bins.X2pipi" bins_y="bins.X2ee" /> 
		<Rebin save_as="rb_chipidmatch" name="chipidmatch" bins_x="bins.X2pipi" bins_y="bins.X2ee" /> 
		<Rebin save_as="rb_chipidcutSel" name="chipidcutSel" bins_x="bins.X2pipi" bins_y="bins.X2eeSig" /> 

	</Transform>

	<bins>
		<X2pipi min="0" max="120" width="1" />
		<X2ee min="0" max="120" width="1" />
		<X2eeSig min="0" max="120" width="0.2" />
	</bins>


	<Canvas cols="2" rows="2" w="850" h="1100" >

		<Pad name="p1" gx="0, 1" gy="1, 2" m="0.01, 0.05, 0.01, 0.07" >
			<StatBox v="0" />
			<Histo name="rb_chipid" draw="colz" logz="1" y-title="#chi^{2}_{ee}" x-title="#chi^{2}_{#pi#pi}" xtp="34" ytp="34" xto="0.5" yto="1.5" xlo="2" />
			<ColorAxis w="0.01" x="0.91" h="0.955" y="0.02" />

			<TLatex x="0.35" y="0.8" text="all uls" point="24" font="42" />

			<TLatex x="0.075" y="0.7" text="#chi^{2}_{ee}" point="34" font="42" angle="90" />

		</Pad>

		<Pad name="p2" gx="1, 2" gy="1, 2" m="0.01, 0.05, 0.01, 0.03" >
			<StatBox v="0" />
			<Histo name="rb_chipidmatch" draw="colz" logz="1" xlo="2"/>
			<ColorAxis w="0.01" x="0.91" h="0.955" y="0.02" />
			<TLatex x="0.3" y="0.8" text="uls w/ TOF Match" point="24" font="42" />
		</Pad>

		<Pad name="p3" gx="0, 1" gy="0, 1" m="0.01, 0.05, 0.08, 0.07" >
			<StatBox v="0" />
			<Histo name="rb_chipidcut" draw="colz" logz="1" y-title="#chi^{2}_{ee}" x-title="#chi^{2}_{#pi#pi}" xtp="34" ytp="34" xto="0.5" yto="1.5"/>
			<ColorAxis w="0.01" x="0.91" h="0.82" y="0.16" />
			<TLatex x="0.3" y="0.8" text="uls w/" point="24" font="42" />
			<TLatex x="0.3" y="0.74" text="TOF Match + #Delta#DeltaTOF" point="24" font="42" />
			<TLatex x="0.075" y="0.72" text="#chi^{2}_{ee}" point="34" font="42" angle="90" />
		</Pad>

		<Pad name="p3" gx="1, 2" gy="0, 1" m="0.01, 0.05, 0.08, 0.03"  >
			<StatBox v="0" />
			<Histo name="rb_chipidcutSel" draw="colz" logz="1" yr="0, 20" y-title="#chi^{2}_{ee}" x-title="#chi^{2}_{#pi#pi}" xtp="34" ytp="34" xto="0.5" yto="1.5" />
			<ColorAxis w="0.01" x="0.91" h="0.82" y="0.16" />
			<TLatex x="0.3" y="0.8" text="Signal" point="24" font="42" />
		</Pad>


		<Export url="rp_chipid.pdf" />
		<Export url="rp_chipid.png" />
	</Canvas>
</config>