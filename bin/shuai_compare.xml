<?xml version="1.0" encoding="UTF-8"?>
<config>
	<mod>0</mod>
	<Data name="d" url="AuAu.root" />
	
	<Data name="d0" url="auau_pt2_m0_stat.root" />
	<Data name="d1" url="auau_pt2_m1_stat.root" />
	<Data name="d2" url="auau_pt2_m2_stat.root" />

	<TCanvas width="1900" height="1100" />
	<Margins>0.05, 0.10, 0.12, 0.12</Margins>

	<Transform>
		<Projection axis="y" save_as="hpt2A" name="d/pt2id2" x1="0.4" x2="0.76" />
		<Projection axis="y" save_as="hpt2B" name="d/pt2id2" x1="0.76" x2="1.2" />
		<Projection axis="y" save_as="hpt2C" name="d/pt2id2" x1="1.2" x2="2.6" />
	</Transform>

	<Transform>
		<Scale  save_as="hspt20" name="hpt2A" factor="0.1" opt="width" />
		<Scale  save_as="hspt21" name="hpt2B" factor="0.1" opt="width" />
		<Scale  save_as="hspt22" name="hpt2C" factor="0.1" opt="width" />
	</Transform>

	<Plot>
		<StatBox v="0" />
		<Histo name="hspt2{mod}" marker-style="8" marker-size="3" marker-color="#000" draw="pe" lc="#000" logy="0" title="" x-title="p_{T}^{2} (GeV/c)^{2}" y-title="dN/dp_{T}^{2} (GeV/c)^{-2} arb. norm." min="1e-4" xr="0, 0.01" axisdigits="4" />
		<Graph name="d{mod}/Graph" draw="same pe" marker-style="8" marker-size="3" marker-color="#F00" />

		<Include url="Text.Scope[{mod}]"  />

		<Legend border-size="0" >
			<Position pos="top right" padding="0.01, 0.01, 0, 0" />
			<Entry name="hspt2{mod}" title="UPC Au+Au (10+11)" opt="lpe" />
			<Entry name="d{mod}/Graph" title="60-80% Au+Au" opt="lpe" />
			
		</Legend>

		<Export url="shuai_m{mod}_pairPt2_zoom.pdf" />
	</Plot>


	<Text>
		<Scope>
			<TLatex text="0.4 < M_{ee} < 0.76 GeV/c^{2}" x="0.5" y="0.3" />
		</Scope>
		<Scope>
			<TLatex text="0.76 < M_{ee} < 1.2 GeV/c^{2}" x="0.5" y="0.3" />
		</Scope>
		<Scope>
			<TLatex text="1.2 < M_{ee} < 2.6 GeV/c^{2}" x="0.5" y="0.3" />
		</Scope>
	</Text>

	<mass min="0" max="4" width="0.015" />

</config>